        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoPlaca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoVehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Cliente)
            </td>
