@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "PARQUEO_MARIACHI - Iniciar sesión";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <style>
        /* Reset básico */
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            background-color: #1f436b;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #1f436b;
        }

        .login-container {
            background-color: #f9fafb;
            border-radius: 16px;
            padding: 32px 40px 40px 40px;
            box-shadow: 0 12px 30px rgba(0,0,0,0.15);
            width: 360px;
            text-align: center;
        }

        .logo {
            width: 72px;
            height: 72px;
            margin: 0 auto 16px auto;
            background-color: #1f436b;
            border-radius: 12px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .logo svg, .logo img {
                max-width: 48px;
                max-height: 48px;
            }

        h1 {
            font-size: 1.6rem;
            margin-bottom: 4px;
            font-weight: 700;
        }

        p.subtitle {
            font-size: 1rem;
            margin-bottom: 24px;
            color: #4b6e8a;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        input[type="text"],
        input[type="password"] {
            padding: 12px 16px;
            margin-bottom: 16px;
            border: 1.5px solid #d2d6dc;
            border-radius: 10px;
            font-size: 1rem;
            color: #1f436b;
            outline-offset: 2px;
            transition: border-color 0.3s;
        }

            input[type="text"]:focus,
            input[type="password"]:focus {
                border-color: #1f436b;
            }

        .input-icon {
            position: relative;
        }

            .input-icon svg {
                position: absolute;
                top: 35%;
                left: 12px;
                transform: translateY(-50%);
                fill: #1f436b;
                width: 44px;
                height: 37px;
                pointer-events: none;
            }

        input[type="text"].with-icon,
        input[type="password"].with-icon {
            padding-left: 40px;
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            margin-bottom: 24px;
            user-select: none;
        }

            .checkbox-group input[type="checkbox"] {
                margin-right: 8px;
                width: 18px;
                height: 18px;
                cursor: pointer;
            }

        button {
            background-color: #1f436b;
            border: none;
            padding: 12px 0;
            color: white;
            font-weight: 600;
            font-size: 1rem;
            border-radius: 12px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #163756;
            }

        .links {
            margin-top: 20px;
            font-size: 0.9rem;
            color: #1f436b;
        }

            .links a {
                color: #1f436b;
                text-decoration: none;
                margin: 0 8px;
            }

                .links a:hover {
                    text-decoration: underline;
                }

        .links-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 8px;
            margin-top: 12px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo">
            <img src="/imagenes/Auto.png" alt="Logo Parqueo" />
        </div>
        <h1>PARQUEO_MARIACHI</h1>
        <p class="subtitle">Acceso al Sistema de Parqueo</p>

        <form method="post" id="account">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="input-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" /></svg>
                <input asp-for="Input.Email" type="text" autocomplete="username" placeholder="Usuario" class="with-icon" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="input-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 17a2 2 0 0 0 2-2v-3a2 2 0 1 0-4 0v3a2 2 0 0 0 2 2zm6-7V8a6 6 0 0 0-12 0v2H4v12h16V10h-2zm-6-5a4 4 0 0 1 4 4v2H8v-2a4 4 0 0 1 4-4z" /></svg>
                <input asp-for="Input.Password" type="password" autocomplete="current-password" placeholder="Contraseña" class="with-icon" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <label class="checkbox-group">
                <input asp-for="Input.RememberMe" type="checkbox" />
                Recuérdame
            </label>

            <button type="submit">Iniciar sesión</button>

            <div class="links-container">
                <a asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crear cuenta nueva</a>
                <a asp-page="./ResendEmailConfirmation">Reenviar confirmación de correo</a>
            </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
